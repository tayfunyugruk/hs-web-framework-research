{%- if true -%}
  User-agent: *
  Disallow: /
{%- else -%}
  {% for group in robots.default_groups %}
    {{- group.user_agent -}}

    {% for rule in group.rules %}
      {{- rule -}}
    {% endfor %}

    {%- if group.sitemap != blank -%}
      {{ group.sitemap }}
    {%- endif -%}
  {% endfor %}
{%- endif -%}